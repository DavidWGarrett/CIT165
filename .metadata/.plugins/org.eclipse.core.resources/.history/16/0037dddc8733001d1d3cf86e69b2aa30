import java.util.Scanner; // Below or above package?

package chapter2;

public class Lab1 {
	public static void main(String[] args)
	{
		double radius;
		double height;
		double surfaceArea;
		Scanner input;
		
		input = new Scanner(System.in);
		System.out.print("Enter in the radius of your cylindric object: ");
		radius = input.nextDouble();
		System.out.print("Enter in height radius of your cylindric object: ");
		height = input.nextDouble();

		surfaceArea = (2 * radius * radius * 3.14) + (2 * height * radius * 3.14);

		System.out.println("The area of your object is: " + surfaceArea);
	}
}
