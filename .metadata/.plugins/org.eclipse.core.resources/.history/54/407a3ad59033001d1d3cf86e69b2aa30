package chapter2;
import java.util.Scanner;

public class Lab2 {
	public static void main(String[] args)
	{
		int totalBills, twentyBills, tenBills, fiveBills, oneBills, leftover;
		Scanner input = new Scanner(System.in);
		
		
		System.out.print("Enter the amount of dollars you have: ");
		
		
		totalBills = input.nextInt();
		
		twentyBills = totalBills / 20;
		leftover = totalBills % 20;

		tenBills = leftover / 10;
		leftover %= 10;

		fiveBills = leftover / 5;
		leftover %= 5;
		
		oneBills = leftover;
		
		System.out.println("\nThe optimal way to carry your cash is to carry:\n" + twentyBills + " twenty dollar bill(s)\n" +
							tenBills + " ten dollar bill(s)\n" + fiveBills + " five dollar bill(s)\n" + oneBills + " one dollar bill(s)");
	}
}
