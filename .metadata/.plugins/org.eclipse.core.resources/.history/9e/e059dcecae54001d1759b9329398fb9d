/*
 * This program should prompt the user for a maximum value and an increment amount.
 * It should then count from 1 to the maximum value in the increments specified by the user.
 */
package chapter5;

import java.util.Scanner;

public class Chapter5 
{
	public static void main(String[] args) 
	{
		int counter;
		int limit;
		int increment;
		
		// Created new scanner object for input. Now the program
		// will be able to take input in
		Scanner input = new Scanner(System.in);
		
		System.out.println("Welcome to the counting fun program!");
		System.out.print("This program will first count up by x from a 1 to a maximum value of y but that is not all, ");
		System.out.println("it will then count down by x from a maximum value of y to 1!\n");
		
		System.out.print("Enter the increment value (x): ");
		increment = input.nextInt();
		System.out.print("Enter the maximum value you would like to count to (y): ");
		limit = input.nextInt();
		
		System.out.println("\nCounting up with a for loop...");
		for(counter = 1;counter < limit;counter += increment)
		{
			System.out.printf("%d ", counter);
		}

		System.out.println("\n\nCounting down with a while loop...");
		counter = limit;
		while(counter >= 1);
		{
			System.out.printf("%d ", counter);
			counter -= increment;
		}
	}
}
