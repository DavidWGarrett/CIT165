package chapter4_1;

import java.util.Scanner;

public class Chapter4_1 
{
	public static void main(String[] args) 
	{
		Scanner input = new Scanner(System.in);
		String firstName, lastName, fullName;
		int indexOfComma;
		
		System.out.print("Enter your name in the format Lastname, Firstname (i.e. Bob, Joe): ");
		fullName = input.nextLine();
		
		indexOfComma = fullName.indexOf(',');
		
		
		// Changed from 1 to 2. The index needs to add 2 since there
		// is a space between the comma and the first letter of the
		// first name
		firstName = fullName.substring(indexOfComma + 2);
		
		// Change from firstName to fullName. Program intends to find
		// the substring in fullName that'll return the last name typed in
		lastName = fullName.substring(0, indexOfComma);
		
		fullName = firstName + ' ' + lastName;
		
		/* 
		 * Changed "\nHello "" + fullName + '"' to
		 * "\nHello " + fullName + "\""
		 * 
		 * Added escape character \ in front of the quotation
		 * marks that were intended to be in the print statement.
		 * 
		 * Removed single quote markers, not used with strings.
		 */
		System.out.println("\nHello \"" + fullName + "\"");
	}
}
