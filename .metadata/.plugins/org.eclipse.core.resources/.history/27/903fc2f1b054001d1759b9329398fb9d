* This program use a method to calculate the total value of a collection of change.
*/
package chapter6;

import java.util.Scanner;

public class Chapter6 {

	public static void main(String[] args) 
	{
		Scanner input = new Scanner(System.in);
		int quarter, dime, nickel, penny;
		double dollars = 0;
		
		System.out.printf("How many quarters: ");
		quarter = input.nextInt();
		System.out.printf("How many dimes   : ");
		dime = input.nextInt();
		System.out.printf("How many nickels : ");
		nickel = input.nextInt();
		System.out.printf("How many pennies : ");
		penny = input.nextInt();
		
		// the total value that was calculated in the convertChange
		// method will be initialized to dollars
		dollars = convertChange(penny, nickel, dime, quarter);
		
		System.out.printf("\nYou have $%.2f", dollars);
	}
	
	public static double convertChange(int quarters, int dimes, int nickels, int pennies)
	{
		double totalValue = 0;
		
		totalValue = quarters * .25;
		totalValue += dimes * .1;
		totalValue += nickels * .05;
		totalValue += pennies * .01;
		
		// Method must have a return value.
		// After the calculations are done, method will return the
		// total money to the main method.
		return totalValue;

	
	}
}
